@model MvcCRUDWithModalPopup.Models.tblStudent

<h2>Save</h2>
@using (Html.BeginForm("delete", "home", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.Id)
    

    <div class="form-group">
        <label>Id</label>
        <p>@Model.Id</p>
    </div>

    <div class="form-group">
        <label>Name</label>
        <p>@Model.Name</p>
    </div>

    <div class="form-group">
        <label>Father's Name</label>
        <p>@Model.FatherName</p>
    </div>

    <div class="form-group">
        <label>Email</label>
        <p>@Model.Email</p>
    </div>

    <div class="form-group">
        <label>Mobile</label>
        <p>@Model.Mobile</p>
    </div>

    <div class="form-group">
        <label>Description</label>
        <p>@Model.Description</p>
    </div>

    <div>
        <input type="submit" value="Delete" />
    </div>
}
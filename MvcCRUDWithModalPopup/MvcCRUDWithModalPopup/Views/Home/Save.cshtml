@model MvcCRUDWithModalPopup.Models.tblStudent


<h2>Save</h2>
@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id > 0)
    {
        @Html.HiddenFor(a => a.Id)
    }   

    <div class="form-group">
        <label>Id</label>
        @Html.TextBoxFor(a => a.Id, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Id)
    </div>

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Name)
    </div>

    <div class="form-group">
        <label>Father's Name</label>
        @Html.TextBoxFor(a => a.FatherName, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.FatherName)
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Email)
    </div>

    <div class="form-group">
        <label>Mobile</label>
        @Html.TextBoxFor(a => a.Mobile, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Mobile)
    </div>

    <div class="form-group">
        <label>Description</label>
        @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Description)
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
}